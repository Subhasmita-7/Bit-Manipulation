Input: nums = [1,2,3]
Output: [[],[1],[2],[1,2],[3],[1,3],[2,3],[1,2,3]]


class Solution {
    public List<List<Integer>> subsets(int[] nums) {
        List<List<Integer>> sub = new ArrayList<>();
        int n = nums.length;
        int tot = 1 << n;         //calculates power i.e 1 left shift n times

        for(int i=0 ; i< tot ; i++){
            List<Integer> s = new ArrayList<>();
            for(int j=0 ; j<n ; j++){
                if(((i >> j) & 1 ) == 1 ){          // i right shift j times then check AND with 1 .
                    s.add(nums[j]);
                }
            }
            sub.add(s);
        }
        return sub;
    }
}
